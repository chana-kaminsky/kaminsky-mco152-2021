<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="kaminsky.scrabble.ScrabbleController"
          xmlns:fx="http://javafx.com/fxml" alignment="top_center"
          hgap="10" vgap="40" stylesheets="@scrabble_application.css">

    <padding>
        <Insets top="30" right="25" bottom="10" left="25"/>
    </padding>

    <Label fx:id="top0Label" onMouseClicked="#onAnswerClicked"/>
    <Label fx:id="top1Label" onMouseClicked="#onAnswerClicked"/>
    <Label fx:id="top2Label" onMouseClicked="#onAnswerClicked"/>
    <Label fx:id="top3Label" onMouseClicked="#onAnswerClicked"/>
    <Label fx:id="top4Label" onMouseClicked="#onAnswerClicked"/>
    <Label fx:id="top5Label" onMouseClicked="#onAnswerClicked"/>
    <Label fx:id="top6Label" onMouseClicked="#onAnswerClicked"/>

    <Label fx:id="bottom0Label"/>
    <Label fx:id="bottom1Label"/>
    <Label fx:id="bottom2Label"/>
    <Label fx:id="bottom3Label"/>
    <Label fx:id="bottom4Label"/>
    <Label fx:id="bottom5Label"/>
    <Label fx:id="bottom6Label"/>

    <fx:define>
        <ArrayList fx:id="topLabels">
            <fx:reference source="top0Label"/>
            <fx:reference source="top1Label"/>
            <fx:reference source="top2Label"/>
            <fx:reference source="top3Label"/>
            <fx:reference source="top4Label"/>
            <fx:reference source="top5Label"/>
            <fx:reference source="top6Label"/>
        </ArrayList>
    </fx:define>

    <fx:define>
        <ArrayList fx:id="bottomLabels">
            <fx:reference source="bottom0Label"/>
            <fx:reference source="bottom1Label"/>
            <fx:reference source="bottom2Label"/>
            <fx:reference source="bottom3Label"/>
            <fx:reference source="bottom4Label"/>
            <fx:reference source="bottom5Label"/>
            <fx:reference source="bottom6Label"/>
        </ArrayList>
    </fx:define>

    <Button text="Submit"
            onAction="#onSubmit"
            GridPane.columnIndex="4"
            GridPane.rowIndex="1" />

    <Button text="Clear"
            onAction="#onClear"
            GridPane.columnIndex="5"
            GridPane.rowIndex="1" />

    <Label text="# Points"
           styleClass="points"
           GridPane.columnIndex="6"
           GridPane.rowIndex="1" />

</GridPane>
