<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="kaminsky.scrabble.ScrabbleController"
          xmlns:fx="http://javafx.com/fxml" alignment="top_center"
          hgap="10" vgap="40">

    <padding>
        <Insets top="30" right="25" bottom="10" left="25"/>
    </padding>

    <Label fx:id="top0Label" />
    <Label fx:id="top1Label" />
    <Label fx:id="top2Label" />
    <Label fx:id="top3Label" />
    <Label fx:id="top4Label" />
    <Label fx:id="top5Label" />
    <Label fx:id="top6Label" />

    <Label fx:id="bottom0Label" />
    <Label fx:id="bottom1Label" />
    <Label fx:id="bottom2Label" />
    <Label fx:id="bottom3Label" />
    <Label fx:id="bottom4Label" />
    <Label fx:id="bottom5Label" />
    <Label fx:id="bottom6Label" />

    <Button text="Submit"
            GridPane.columnIndex="4"
            GridPane.rowIndex="1" />

    <Button text="Clear"
            GridPane.columnIndex="5"
            GridPane.rowIndex="1" />

    <Button text="# Points"
            GridPane.columnIndex="6"
            GridPane.rowIndex="1" />

</GridPane>
